@model IEnumerable<ProyectoJorgeManzano.Models.EquipoModelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.founded)
            </th>
            <th>
                Logo
            </th>
            <th>
                Pais
            </th>
            <th>
                Competiciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @(item.name + "("+ item.code +")")
                </td>            
                <td>
                    @Html.DisplayFor(modelItem => item.founded)
                </td>
                <td>
                    <img src="@item.logo" style="width: 150px" />
                </td>
                <td>
                    @if (item.pais != null)
                    {
                        <img src="@item.pais.countryFlag" style="width: 150px;" />
                    }                    
                </td>
            <td>
                @if (item.competicionesEquipos.Count != 0)
                {
                    <select multiple disabled>
                        @foreach (var competicionesEquipos in item.competicionesEquipos)
                        {
                            <option value="@competicionesEquipos.competicionID">@competicionesEquipos.competicion.name</option>
                        }
                    </select>
                }
                else
                {
                    <p>No hay competiciones</p>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
