@model IEnumerable<ProyectoJorgeManzano.Models.PaisModelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Bandera
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Equipo" asp-action="EquiposPorPais" asp-route-id="@item.id.Trim()" style="text-decoration: none; color: black">
                    @item.countryName
                </a>
            </td>
            <td>
                    <a asp-controller="Equipo" asp-action="EquiposPorPais" asp-route-id="@item.id.Trim()" style="text-decoration: none; color: black">
                    <img src="@item.countryFlag" style="width: 150px;" />
                </a>                
            </td>            
        </tr>
}
    </tbody>
</table>
